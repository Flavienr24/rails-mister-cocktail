<h1><%= @cocktail.name %></h1>

<h3>Ingrédients</h3>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> - <%= dose.ingredient.name %>  |  <%= link_to dose_path(dose),
      method: 'delete',
      data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
  </li>
<% end %>
</ul>

<%= link_to cocktail_destroy_path(@cocktail),
      method: 'delete',
      data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>


<%= link_to "Ajouter un ingrédient", new_cocktail_dose_path(params[:id])  %>

<%= link_to "Retour à l'acceuil", root_path %>
